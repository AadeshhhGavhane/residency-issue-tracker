# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/auth_starter_kit

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret-key

# Logging Configuration
LOG_LEVEL=info

# Logtail Configuration (Cloud Logging Service)
LOGTAIL_SOURCE_TOKEN=your-logtail-source-token
LOGTAIL_ENABLED=true
LOGTAIL_LEVEL=info

# Logging Strategy
LOG_APPLICATION_LOGS=true
LOG_AUDIT_LOGS=true
LOG_SAMPLE_RATE=100

# Email Configuration (Development - Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@authstarterkit.com

# Email Configuration (Production - SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Email Verification Settings
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_EXPIRES=24h

# Password Reset Settings
PASSWORD_RESET_EXPIRES=1h

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Security Headers
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=true

# File Upload Settings
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Database Settings
MONGODB_CONNECTION_TIMEOUT=30000
MONGODB_SOCKET_TIMEOUT=45000

# Session Settings
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_MAX_AGE=86400000

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=Auth Starter Kit API
SWAGGER_VERSION=1.0.0

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Development Settings
DEBUG_MODE=false
LOG_REQUESTS=true
LOG_ERRORS=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=error
# DEBUG_MODE=false
# LOG_REQUESTS=false 

#WHAPI Whatsapp bearer token
WHATSAPP_BEARER_TOKEN=enter_your_token

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here